# Production Environment Variables Template
# Copy this file to .env and update with your production values

# Google OAuth Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# IMPORTANT: Update this with your PRODUCTION callback URL
# Format: https://YOUR_DOMAIN/auth/google/callback
# Example: https://your-app-name.railway.app/auth/google/callback
GOOGLE_CALLBACK_URL=https://YOUR_PRODUCTION_DOMAIN/auth/google/callback

# Frontend URL for OAuth redirect
# Format: https://YOUR_DOMAIN
FRONTEND_URL=https://YOUR_PRODUCTION_DOMAIN

# JWT Secrets - Generate new secure secrets for production
# Use: openssl rand -base64 32
JWT_SECRET=your_super_secure_jwt_secret_for_production
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_for_production

# Database Configuration
MONGODB_URI=your_production_mongodb_connection_string

# Server Configuration
PORT=5000
NODE_ENV=production

# Session Configuration (for OAuth)
SESSION_SECRET=your_session_secret_for_production

# Optional: Email Configuration (if using email features)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Optional: SMS Configuration (if using SMS features)
SMS_API_KEY=your_sms_api_key
SMS_SENDER_ID=your_sender_id